% Commands for text, e.g. consistent formatting of 'objects', or names.
\newcommand{\neo2}[0]{NEO-2}
\newcommand{\neo2par}[0]{NEO-2-PAR}
\newcommand{\neo2ql}[0]{NEO-2-QL}
\newcommand{\file}[1]{\em{#1}} % For files.
\newcommand{\inputparameter}[1]{\em{#1}} % For inputparameter, i.e. those in neo[2].in.
\newcommand{\codevariable}[1]{\em{#1}} % For variables (or constants) of the neo-2 code.
\newcommand{\program}[1]{\em{#1}} % For (external) programs, e.g. python3, efit_to_boozer.x

\newcommand{\ga}[1]{\left\langle #1\right\rangle}

\newcommand{\pd}[2]{\frac{\partial #1}{\partial #2}} % for partial derivatives
\newcommand{\pdd}[2]{\frac{\partial^2 #1}{\partial #2^2}} % for double partial derivatives
